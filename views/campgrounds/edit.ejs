<% layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%=campground._id %>?_method=PUT  "
      method="POST"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          placeholder="<%= campground.title  %> "
          id="title"
          name="campground[title]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          placeholder="<%= campground.location %> "
          id="location"
          name="campground[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          placeholder="<%= campground.image %>"
          id="image"
          name="campground[image]"
        />
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="<%= campground.price%> "
              aria-label="price"
              aria-describedby="price-label"
              name="campground[price]"
            />
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text-area"
          id="description"
          placeholder="<%= campground.description %> "
          name="campground[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update <%= campground.title%></button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
